<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">



<mapper namespace="com.thoughtworks.learning.core.ItemsRepository" >

    <resultMap id="itemsMapper" type="Items">

        <id property="barcode" column="barcode" />
        <result property="name" column="name" />
        <result property="unit" column="unit" />
        <result property="price" column="price" />

    </resultMap>

    <select id="findItems" resultMap="itemsMapper">
        select * from allItems
    </select>

    <insert id="putItems">
        insert into Inputs(barcode) values(#{barcode});
    </insert>

    <resultMap id="inputsMapper" type="String">
        <id  column="barcode"/>
    </resultMap>

    <select id="getInputs" resultMap="inputsMapper">
        select * from Inputs
    </select>

